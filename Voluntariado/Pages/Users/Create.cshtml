@page
@model Voluntariado.Pages.Users.CreateModel
@{
    ViewData["Title"] = "Registrar Usuario";
}

<h2>Registrar Usuario</h2>

<form method="post">
    <div class="form-group">
        <label>Nombre completo</label>
        <input asp-for="User.Name" class="form-control" />
        <span asp-validation-for="User.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Nombre de usuario</label>
        <input asp-for="User.Username" class="form-control" />
        <span asp-validation-for="User.Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Correo electrónico</label>
        <input asp-for="User.Email" type="email" class="form-control" />
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Contraseña</label>
        <input asp-for="User.PasswordHash" type="password" class="form-control" />
        <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Rol</label>
        <select asp-for="User.RoleId" asp-items="Model.RoleOptions" class="form-control">
            <option value="">Seleccione un rol</option>
        </select>
        <span asp-validation-for="User.RoleId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Registrar</button>
    <a asp-page="Index" class="btn btn-secondary mt-3">Volver</a>

    <div asp-validation-summary="All" class="text-danger mt-3"></div>
</form>
