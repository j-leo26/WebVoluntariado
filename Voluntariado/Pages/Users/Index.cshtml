@page
@model Voluntariado.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Usuarios";
}

<h2>Lista de Usuarios</h2>

<p>
    <a asp-page="Create" class="btn btn-primary">➕ Nuevo Usuario</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Usuario</th>
            <th>Correo</th>
            <th>Rol</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.Role?.Name</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-page="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
