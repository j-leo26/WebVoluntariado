@page "{id:int}"
@model Voluntariado.Pages.Users.EditModel
@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>Editar Usuario</h2>

<form method="post">
    <input type="hidden" asp-for="User.Id" />

    <div class="form-group">
        <label>Nombres</label>
        <input asp-for="User.FirstName" class="form-control" />
        <span asp-validation-for="User.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Apellidos</label>
        <input asp-for="User.LastName" class="form-control" />
        <span asp-validation-for="User.LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Nombre de usuario</label>
        <input asp-for="User.Username" class="form-control" />
        <span asp-validation-for="User.Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Correo electrónico</label>
        <input asp-for="User.Email" type="email" class="form-control" />
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Contraseña</label>
        <input asp-for="User.PasswordHash" type="password" class="form-control" />
        <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Rol</label>
        <select asp-for="User.RoleId" asp-items="Model.RoleOptions" class="form-control"></select>
        <span asp-validation-for="User.RoleId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar cambios</button>
    <a asp-page="Index" class="btn btn-secondary mt-3">Cancelar</a>

    <div asp-validation-summary="All" class="text-danger mt-3"></div>
</form>
