@page "{id:int}"
@model Voluntariado.Pages.VolunteerOffers.DeleteModel
@{
    ViewData["Title"] = "Eliminar Oferta";
}

<h2>¿Estás seguro de que deseas eliminar esta oferta?</h2>

<div class="alert alert-warning">
    <strong>@Model.Offer.Titulo</strong><br />
    <p>@Model.Offer.Descripcion</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
