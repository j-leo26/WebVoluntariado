@page
@model Voluntariado.Pages.Roles.CreateModel
@{
    ViewData["Title"] = "Crear Rol";
}

<h1>Crear Rol</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Role.Name"></label>
        <input asp-for="Role.Name" class="form-control" />
        <span asp-validation-for="Role.Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary mt-3">Volver</a>
</form>
